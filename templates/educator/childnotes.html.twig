{% extends "master.html.twig" %}

{% block content %}

{% block addHead %}
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script>tinymce.init({selector:'textarea[name=itemDescription]'});</script>
{% endblock %}


{% block content %}

{% if errorList %}
    <ul>
    {% for error in errorList %}
        <li>{{ error }}</li>
    {% endfor %}
    </ul>
{% endif %}

<form method="post" enctype="multipart/form-data">
    First Name: <input type="text" name="fName" value="{{ v.fName }}"><br>
    Last Name: <input type="text" name="lName" value="{{ v.lName }}"><br>
    Image: <input type="file" name="image"/><br>
    Height: <input type="number" name="height" value="{{ v.height }}"><br>
    Weight: <input type="number" name="weight" value="{{ v.weight }}"><br>
    Skill: <input type="text" name="skill" value="{{ v.skill}}"><br>
    Notes: <textarea name="childnotes">{{ v.childnotes}}</textarea><br>
    <input type="submit" value="Submit">
</form>

{% endblock %}